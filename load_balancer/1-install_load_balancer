#!/usr/bin/env bash
# Script to install and configure HAProxy for load balancing

# Update package lists and install HAProxy
sudo apt-get update -y
sudo apt-get install -y haproxy

# Enable HAProxy in daemon mode
sudo sed -i 's/ENABLED=0/ENABLED=1/' /etc/default/haproxy

# Create HAProxy configuration with roundrobin setup
cat <<EOL | sudo tee /etc/haproxy/haproxy.cfg
global
    log /dev/log    local0
    log /dev/log    local1 notice
    daemon

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    timeout connect 5000ms
    timeout client  50000ms
    timeout server  50000ms
    errorfile 400 /etc/haproxy/errors/400.http
    errorfile 403 /etc/haproxy/errors/403.http
    errorfile 408 /etc/haproxy/errors/408.http
    errorfile 500 /etc/haproxy/errors/500.http
    errorfile 502 /etc/haproxy/errors/502.http
    errorfile 503 /etc/haproxy/errors/503.http
    errorfile 504 /etc/haproxy/errors/504.http

frontend http_front
    bind *:80
    default_backend http_back

backend http_back
    balance roundrobin
    server 6315-web-01 54.221.128.224:80 check
    server 6315-web-02 54.91.66.161:80 check
EOL

# Restart HAProxy to apply configuration
sudo systemctl restart haproxy

# Verify that HAProxy is running
sudo systemctl status haproxy
