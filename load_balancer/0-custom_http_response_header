#!/usr/bin/env bash
# Script to install and configure Nginx with custom headers and settings

# Update the package lists and install Nginx
sudo apt-get update -y
sudo apt-get install -y nginx

# Create necessary directories and files
sudo mkdir -p /etc/nginx/html
echo "Holberton School" | sudo tee /etc/nginx/html/index.html
echo "Ceci n'est pas une page" | sudo tee /etc/nginx/html/404.html

# Modify the Nginx default server block configuration
sudo tee /etc/nginx/sites-available/default > /dev/null << EOF
server {
    listen 80 default_server;
    listen [::]:80 default_server;
    
    # Custom header to show the hostname
    add_header X-Served-By \$hostname;

    root /etc/nginx/html;
    index index.html index.htm;

    # Redirect configuration
    location /redirect_me {
        return 301 http://cuberule.com/;
    }

    # Custom 404 page configuration
    error_page 404 /404.html;
    location = /404.html {
        internal;
    }
}
EOF

# Restart Nginx to apply the changes
sudo systemctl restart nginx
