#!/usr/bin/env bash
# Script to install and configure Nginx with custom headers and settings

# Update the package lists and install Nginx
apt-get update -y
apt-get install -y nginx


# Configure Nginx to display "Holberton School" on the home page
echo "Holberton School for the win!" | sudo tee /var/www/html/index.html > /dev/null

# Configure Nginx to display "Ceci n'est pas une page" on the error page
sudo touch /var/www/html/404.html
echo "Ceci n'est pas une page" > /var/www/html/404.html

#default edits
printf %s "server {
    server {
        listen 80 default_server;
        listen [::]:80 default_server;

        # SSL configuration
        #
        # listen 443 ssl default_server;
        # listen [::]:443 ssl default_server;
        #
        # Note: You should disable gzip for SSL traffic.
        # See: https://bugs.debian.org/773332
        #
        # Read up on ssl_ciphers to ensure a secure configuration.
        # See: https://bugs.debian.org/765782
        #
        # Self signed certs generated by the ssl-cert package
        # Don't use them in a production server!
        #
        # include snippets/snakeoil.conf;

        root /var/www/html;

        # Add index.php to the list if you are using PHP
        index index.html index.htm index.nginx-debian.html;

        server_name _;

        location / {
                # First attempt to serve request as file, then
                # as directory, then fall back to displaying a 404.
                try_files $uri $uri/ =404;

                # Add custom header to identify the server
                add_header X-Served-By $hostname;
        }

        rewrite ^/redirect_me https://www.youtube.com/watch?v=7ESO6SHEwGk&list=RD7ESO6SHEwGk&start_radio=1 permanent;

        error_page 404 /404.html;
}" > /etc/nginx/sites-available/default

# Restart Nginx to apply the changes
service nginx restart
sudo systemctl restart nginx
