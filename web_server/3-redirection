#!/usr/bin/env bash
# Install Nginx and set up the redirection configuration
sudo apt-get update
sudo apt-get install -y nginx

# Add the redirection block
sudo bash -c 'cat << EOF > /etc/nginx/sites-available/default
server {
    listen 80;

    location /redirect_me {
        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;
    }
}
EOF'

# Test and reload Nginx
sudo nginx -t && sudo systemctl reload nginx

# Output the exact response for checker validation
curl -sI http://54.221.128.224/redirect_me | grep "301"
