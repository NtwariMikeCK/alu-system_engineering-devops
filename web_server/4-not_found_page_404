#!/usr/bin/env bash
# Update and install Nginx if not already installed
sudo apt-get update
sudo apt-get install -y nginx

# Create a new Nginx configuration to set up the redirect
sudo bash -c 'cat << EOF > /etc/nginx/sites-available/default
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;
    index index.html index.htm index.nginx-debian.html;

    server_name _;

    # Redirect /redirect_me to the specified URL
    location = /redirect_me {
        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;
    }

    location / {
        try_files \$uri \$uri/ =404;
    }
}
EOF'

# Test the Nginx configuration for syntax errors
sudo nginx -t

# Reload Nginx to apply changes
sudo systemctl reload nginx

# Test and display the HTTP status code for /redirect_me
echo "Testing redirection:"
curl -o /dev/null -s -w "%{http_code}\n" http://localhost/redirect_me
